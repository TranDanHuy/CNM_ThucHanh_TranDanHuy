<!DOCTYPE html>
<html>
<head>
  <title>Product Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-10">

<div class="max-w-6xl mx-auto bg-white p-6 rounded shadow">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Product List</h1>
    <a href="/add" class="bg-blue-600 text-white px-4 py-2 rounded">
      + Add Product
    </a>
  </div>

  <table class="w-full border">
    <thead class="bg-gray-200">
      <tr>
        <th class="p-2">Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(p => { %>
      <tr class="border-t text-center">
        <td class="p-2">
          <img src="<%= p.url_image %>" class="w-20 mx-auto">
        </td>
        <td><%= p.name %></td>
        <td>$<%= p.price %></td>
        <td><%= p.quantity %></td>
        <td class="space-x-2">
          <a href="/edit/<%= p.id %>" class="text-blue-600">Edit</a>
          <a href="/delete/<%= p.id %>" class="text-red-600"
             onclick="return confirm('Delete this product?')">
            Delete
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

</body>
</html>
